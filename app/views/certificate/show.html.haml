%h2
  - if @certificate.ca
    CA:
  = @certificate.CN
%p
  Subject: #{@certificate.subject}
%p
  Issuer: #{@certificate.issuer}
%p
  Serial: #{@certificate.serial}
%p
  Version: #{@certificate.version}
%p
  Not before: #{@certificate.not_before}
%p
  Not after: #{@certificate.not_after}
%p
  Signature algorithm: #{@certificate.signature_algorithm}
%p
  = link_to "Download the key", "/certificates/key-"+@certificate.serial.to_s+".pem"
  = link_to "Download the certificate", "/certificates/cert-"+@certificate.serial.to_s+".pem"
